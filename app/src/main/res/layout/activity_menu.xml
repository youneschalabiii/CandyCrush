<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Menu"
    android:background="@drawable/menu">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/candylogo"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/candy_crush" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nom_du_joueur"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/nom"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            />

        <Spinner
            android:id="@+id/theme"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="110dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temps"
            />

        <Spinner
            android:id="@+id/temps"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="110dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/commencerBTN"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FF00E6"
        android:textColor="@color/white"
        android:text="@string/commencer_le_jeu"/>

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/afficherBTN"
        android:layout_gravity="center"
        android:backgroundTint="#FF00E6"
        android:textColor="@color/white"
        android:text="@string/afficher_les_scores"/>

</LinearLayout>